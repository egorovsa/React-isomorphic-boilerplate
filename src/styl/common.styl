body
	color $text-color
	font-family $font-family
	font-size 15px
	font-weight: 300

	.container
		max-width 1190px
		margin 0 auto
		padding-left 15px
		padding-right 15px
		background-color #fff

	.app-loading
		opacity 0
		position fixed
		background-color rgba(0, 0, 0, 0.1)
		left 0
		top 0
		bottom 0
		right 0
		z-index 1000
		pointer-events none
		transition 0.3s opacity

		.app-loading-inner
			position absolute
			left: 50%;
			top: 50%;
			margin -40px

			& > img
				width 80px

		&.active
			opacity 1
			pointer-events auto