.main-pre-footer {
	background-color $main-liter-gray-color - 5

	.container {
		display flex;
		justify-content flex-start
		padding 30px 0
		background-color transparent

		+below($content750) {
			flex-direction column
			justify-content center
		}

		& > div {
			width 25%
			box-sizing border-box
			padding 7.5px

			+below($content750) {
				width 95%
				text-align center
				border-bottom 1px solid #ddd
			}

			& > h4 {
				padding-bottom 15px
				font-size 18px
			}

			&.footer-info {
				line-height 32px

				.phones {
					padding-top 15px
					& > div {
						& > a {
							font-size 18px
							padding 5px 0
							display block
							font-weight 500

							& > i {
								margin-right 10px
							}
						}
					}
				}
			}

			&.footer-menu {
				& > span {
					& > a {
						display block;
						padding 10px 0
					}
				}
			}

			&.ordering-info {
				& > div {
					line-height 32px
				}

				.red-text {
					color $main-red-color
				}
			}

		}
	}
}

.main-footer {
	background-color $main-text-color
	color: $main-liter-gray-color

	.container {
		text-align: center;
		line-height: 18px;
		box-sizing: border-box;
		padding: 13px 0;
		background-color transparent

		+below($content750) {
			height auto
			padding 15px 0
		}

	}
}


