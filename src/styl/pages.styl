.pages-container
	background-color #fff
	padding-top: 15px;
	padding-bottom: 15px;

	& > h1
		font-size: 32px;
		margin: 30px 0;
		border-bottom: 1px solid #eaeaea;
		padding-bottom: 15px;
		margin-top 40px

	.page-content
		padding 0 30px
		margin-bottom 20px

		& > p
			margin 10px 0
			line-height 22px

		& > ul
		& > ol
			padding-left 15px

			li
				line-height 22px
				margin-left 15px