.sidenav
	height: 100%; /* 100% Full-height */
	width: 0; /* 0 width - change this with JavaScript */
	position: fixed; /* Stay in place */
	z-index: 100; /* Stay on top */
	top: 0;
	left: 0;
	background-color: #e6e5e4 /* Black*/
	overflow-x: hidden; /* Disable horizontal scroll */
	padding-top: 60px; /* Place content 60px from the top */
	transition: 0.5s; /* 0.5 second transition effect to slide in the sidenav */
	text-align center
	padding-bottom: 20px;
	box-sizing: border-box;

	.background
		position absolute
		width 100%
		height 100%
		z-index 1
		top 0
		opacity 0.2
		background-attachment fixed

	a
		text-decoration: none;
		padding 15px 0;
		font-size: 25px;
		color: #111;
		display: block;
		transition: 0.3s
		z-index 10
		position relative

		&:hover
			color: $main-red-color

	.closebtn
		position: absolute;
		top: 0;
		right: 25px;
		font-size: 36px;
		margin-left: 50px;

	.back-to-main
		position: absolute;
		top: 0;
		left: 10px;
		font-size: 22px;
		line-height: 22px;
		margin-top: 6px;

		& > i
			font-size: 16px;

	&.active
		width 100%

	.map
		width: calc(100% - 50px);
		height: calc(100% - 115px);
		margin: 0 auto;
		border-radius: 3px;
		overflow: hidden;

	h2
		margin-bottom 15px

	.sidenav-first-step
		width: 100%;
		padding: 8px 10px 8px 30px;
		text-align: left;
		font-size: 18px;
		font-weight: 500;
		box-sizing: border-box;
		min-width 300px
		cursor pointer

		&:hover
			color $main-red-color

		& > i
			margin-right 5px

		+above(400px)
			font-size 22px
			min-width 400px

	.sidenav-second-step
		min-width 300px
		width: 100%;
		padding: 5px 13px 5px 15px;
		text-align: left;
		font-size: 16px;
		font-weight: 500;
		box-sizing: border-box;
		line-height: 22px;
		display: flex;
		align-items: center;

		& > i
			margin-right 5px

		+above(400px)
			min-width 400px
			font-size 26px
			line-height 32px

	.sidenav-third-step
		min-width 300px
		width 100%
		display block
		box-sizing border-box
		padding: 8px 13px 8px 50px;
		font-size 14px
		text-align left

		+above(400px)
			min-width 400px
			font-size 18px

